{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "target": "esnext",
        "declaration": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules", "dist"],
    "types": ["babylonjs"]
}
